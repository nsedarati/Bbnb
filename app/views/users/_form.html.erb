<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Sign up</h2>
    <div class="form-group">
      <%= form.text_field :fullname , :class => "form-control", :placeholder => "Full name" %>
    </div>
    <div class="form-group">
      <%= form.text_field :email, type: 'email', :class => "form-control", :placeholder => "Email" %>
    </div>
    <div class="form-group">
      <%= form.password_field :password , :class => "form-control", :placeholder => "password" %>
    </div>
  </div>
</div>