<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Log in</h2>
    <%= form_for :session, url: session_path do |form| %>
      <div class="form-group">
        <%= form.text_field :email, autofocus: true, type: 'email', :class => "form-control", :placeholder => "Email" %>
      </div>
      <div class="form-group">
        <%= form.password_field :password , autocomplete: "off", :class => "form-control", :placeholder => "password" %>
      </div>
      <div class="actions">
        <%= form.submit "Log in", :class => "btn btn-primary" %>
        <%= link_to t(".forgot_password"), new_password_path, :class => "btn btn-info" %>
      <% end %>
    </div>
  </div>