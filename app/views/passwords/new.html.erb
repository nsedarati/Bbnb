<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <div id="clearance" class="password-reset">
      <h2><%= t(".title") %></h2>
      <p><%= t(".description") %></p>
      <%= form_for :password, url: passwords_path do |form| %>
        <div class="form-group">
          <%= form.text_field :email, type: 'email', :class => "form-control text-center", :placeholder => "Enter your email address" %>
        </div>
        <div class="submit-field">
          <%= form.submit "confirm",  :class => "btn btn-danger"%>
        </div>
      <% end %>
    </div>
  </div>
</div>